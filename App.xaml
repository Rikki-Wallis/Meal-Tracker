<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Meal_Tracker.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Meal_Tracker">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->

            <Color x:Key="ThemeColour">#142552</Color>
            <SolidColorBrush x:Key="ThemeBrush"
                             Color="{StaticResource ThemeColour}"/>

            <Color x:Key="HoverColour">#203885</Color>
            <SolidColorBrush x:Key="HoverBrush"
                             Color="{StaticResource HoverColour}"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
