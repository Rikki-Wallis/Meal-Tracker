<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Meal_Tracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Meal_Tracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Meal Tracker">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ingredients Button -->
        <Button x:Name="IngredientsButton"
                Content="Ingredients"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="0"
                Click="IngredientsButtonClick"/>

        <!-- Ingredients Action Panel-->
        <Grid x:Name="IngredientsActionPanel"
            Visibility="Collapsed"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Add"
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="0"
                Click="AddIngredientsClick"/>

            <Button Content="View"                        
                Grid.Row="1"               
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="0"
                Click="ViewIngredientsClick"/>
        </Grid>

        <!-- Recipes Button -->
        <Button  x:Name="RecipesButton"
            Content="Recipes"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            CornerRadius="0"
            Click="RecipesButtonClick"/>

        <!-- Recipes Action Panel -->
        <Grid x:Name="RecipesActionPanel"
            Visibility="Collapsed"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Add"
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="0"
                Click="AddRecipeClick"/>

            <Button Content="View"                        
                Grid.Row="1"               
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="0"
                Click="ViewRecipeClick"/>
        </Grid>

        <Button Content="Plan"
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="0"/>

        <!-- Frame For Navigation -->
        <Frame x:Name="MainFrame"
               Visibility="Visible"
               Grid.Column="1"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
    
    </Grid>
    
    
    
</Window>
