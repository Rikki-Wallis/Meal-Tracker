<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Meal_Tracker.Views.ViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Meal_Tracker.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Background ="{StaticResource ThemeColour}">
        
        <!-- Grid Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Frame For Navigation -->
        <Frame x:Name="ViewFrame"
               Visibility="Visible"
               Grid.Column="0"
               Grid.Row="0"
               Grid.RowSpan="2"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

        <!-- Search Bar -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="SearchBox"
                 Margin="12,12,0,0"
                 Grid.Column="0"
                 PlaceholderText="Search"
                 VerticalAlignment="Center"
                 TextChanged="TextChanged"/>

            <Button x:Name="AddButton"
                    Margin="12,12,12,0"
                    VerticalAlignment="Center"
                    Content="+"
                    Grid.Column="1"
                    Click="AddButtonClicked"/>
            
        </Grid>
            
        <!-- Results -->
        <Grid Grid.Row="1"
              Margin="0,12,0,0">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Name"
                     FontWeight="SemiBold"
                     FontSize="12"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                />

            <TextBlock Text="Calories"
                     FontWeight="SemiBold"
                     FontSize="12"
                     Grid.Column="3"
                     Grid.ColumnSpan="2"
                     HorizontalAlignment="Center"
                />

            <TextBlock Text="Protein"
                     FontWeight="SemiBold"
                     FontSize="12"
                     Grid.Column="5"
                     Grid.ColumnSpan="2"
                     HorizontalAlignment="Center"
                />

            <TextBlock Text="Fats"
                     FontWeight="SemiBold"
                     FontSize="12"
                     Grid.Column="7"
                     Grid.ColumnSpan="2"
                     HorizontalAlignment="Center"
                />

            <TextBlock Text="Carbs"
                     FontWeight="SemiBold"
                     FontSize="12"
                     Grid.Column="9"
                     Grid.ColumnSpan="2"
                     HorizontalAlignment="Left"
                />

            <ListView x:Name="ResultsList"
                  Grid.Row="1"
                  Grid.RowSpan="1"
                  Grid.ColumnSpan="10"
                  Margin="0, 12, 0, 0"
                  IsItemClickEnabled="True"
                  ItemClick="ItemClick"
                  SelectionMode="None">

                <ListView.ItemTemplate>
                    <DataTemplate>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   FontSize="18"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>

                            <TextBlock Text="{Binding Calories}"
                                   Grid.Column="3"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="12"/>

                            <TextBlock Text="{Binding Protein}"
                                   Grid.Column="5"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="12"/>

                            <TextBlock Text="{Binding Carb}"
                                   Grid.Column="7"
                                   Grid.ColumnSpan="2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="12"/>

                            <TextBlock Text="{Binding Fat}"
                                   Grid.Column="9"
                                   Grid.ColumnSpan="2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="12"/>

                        </Grid>

                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </Grid>

    </Grid>
</Page>
