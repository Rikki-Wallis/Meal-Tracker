<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="Meal_Tracker.Views.AddPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource ThemeColour}"
    >

    <Grid>

        <StackPanel Spacing="12"
                    Padding="20">

            <TextBlock x:Name="TitleText"
                       FontSize="32"
                       FontWeight="Bold"/>

            <!-- Ingredient Fields -->

            <Grid x:Name="IngredientFields"
                      Visibility="Collapsed">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="NameBox"
                         Header="Name"
                         Grid.Row="1"
                         Grid.Column="0"
                         Grid.ColumnSpan="4"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"/>

                <TextBox x:Name="CaloriesBox"
                         Header="Calories/100g"
                         Grid.Row="2"
                         Grid.Column="0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Margin="0,10,0,0"/>

                <TextBox x:Name="ProteinBox"
                         Header="Protein/100g"
                         Grid.Row="3"
                         Grid.Column="0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Margin="0,10,0,0"/>

                <TextBox x:Name="FatBox"
                         Header="Fat/100g"
                         Grid.Row="4"
                         Grid.Column="0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Margin="0,10,0,0"/>

                <TextBox x:Name="CarbBox"
                         Header="Carb/100g"
                         Grid.Row="5"
                         Grid.Column="0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Margin="0,10,0,0"/>

            </Grid>

            <!-- Recipe Add -->
            <StackPanel x:Name="RecipeFields"
                        Visibility="Collapsed">

                <TextBox Header="Name"/>
                <TextBox Header="Servings"/>
                <TextBox Header="Instructions" AcceptsReturn="True"/>

            </StackPanel>

            <!-- Save Button -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Save"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Click="SaveButtonClick"/>

                <Button Content="Back"
                        Grid.Column="0"
                        Click="BackButtonClick"/>
            </Grid>

        </StackPanel>
        
    </Grid>
</Page>